CREATE TABLE TB_DEPARTMENT 
(
  DEPARTMENT_NO VARCHAR2(10 BYTE) NOT NULL 
, COLUMN2DEPARTMENT_NAME VARCHAR2(20 BYTE) NOT NULL 
, COLUMN3CATEGORY VARCHAR2(20 BYTE) 
, OPEN_YN CHAR(1 BYTE) 
, CAPACITY NUMBER 
, CONSTRAINT TB_DEPARTMENT_PK PRIMARY KEY 
  (
    DEPARTMENT_NO 
  )
  USING INDEX 
  (
      CREATE UNIQUE INDEX TB_DEPARTMENT_PK ON TB_DEPARTMENT (DEPARTMENT_NO ASC) 
      LOGGING 
      TABLESPACE USERS 
      PCTFREE 10 
      INITRANS 2 
      STORAGE 
      ( 
        BUFFER_POOL DEFAULT 
      ) 
      NOPARALLEL 
  )
  ENABLE 
) 
LOGGING 
TABLESPACE USERS 
PCTFREE 10 
INITRANS 1 
STORAGE 
( 
  BUFFER_POOL DEFAULT 
) 
NOCOMPRESS 
NO INMEMORY 
NOPARALLEL;
